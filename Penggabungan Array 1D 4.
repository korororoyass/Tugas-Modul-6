#include <stdio.h>

int main(){
	
	//Deklarasi data array
	int data1[4]={1,2,3,4};
	int data2[4]={5,6,7,8};
	int data3[8]={};
	int i, j;
	
	//Mencetak data awal
	printf("Data 1:\n");
	for (i=0;i<4;i++){
		printf("%2i", data1[i]);
	}
	printf("\nData 2:\n");
	for (i=0;i<4;i++){
		printf("%2i", data2[i]);
	}
	
	//Penggabungan array
	j=0;
	for (i=0;i<4;i++){
		data3[j]=data1[i];
		j++;
	}
	for (i=0;i<4;i++){
		data3[j]=data2[i];
		j++;
	}

	//Hasil akhir
	printf("\nData 3:\n");
	for (i=0;i<8;i++){
		printf("%2i", data3[i]);
	}
	return 0;
	
	
}
